<% @company_posts.in_groups_of(3).each do|posts| %>
  <div class="row">
    <% posts.each do|post|%> 
      <% if post.present? %>
        <div class="col-md-4 company-blog-div">
        <% @company= post.company %>
        <% @user = User.find_by(:id => @company.user_id).username %>
          <a href="<%= blog_post_blog_posts_path(@company, @user, post)%>">
            <div class="company-inner-blog">
              <div class="blog-image">
                <% if post.featured_image.present? %>
                  <img src="<%= post.featured_image.url %>">
                <%else%>
                  <img src="/assets/missing.png">
                <%end%>
              </div>
              <h4><%= post.title %></h4>
              <p class="heading-text"><%= truncate(strip_tags(post.body),length: 120)%></p>
              <p class="location-div"><span><i class="fa fa-map-marker" aria-hidden="true"></i><%= post.user.first_name %></span><i class="fa fa-long-arrow-right" aria-hidden="true"></i>
              </p>
            </div>
          </a>
        </div><!-- company-blog-div-->
      <%end%>
    <%end%>
  </div><!-- row-->
<%end%>

