<% provide(:title, "User signIn") %>
<div class="main">
  <div class="container p-0 login-container">
    <div class="login-screen">
      <div class="login-overlay">
        <div class="login-left-section">
        <h3><span>Sign In</span></h3>
          <div class="login-form">
            <%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => { :role => 'form' }) do |f| %>
              <%= devise_error_messages! %>
              <div class="form-group">
                <label for="exampleInputEmail1">Username or Email</label>
                <%= f.email_field :email , class: 'form-control' , id:"exampleInputEmail1",  'aria-describedby': "emailHelp", placeholder:"Enter your email"  %>
              </div><!-- form-group-->
              <div class="form-group">
                <%= f.label :password %>
                <%= f.password_field :password , class: 'form-control' ,id:"exampleInputPassword1" ,placeholder: "123@example" %>
              </div><!-- form-group-->
              <p class="text-right forgot-text "><%= link_to "Forgot password?" ,  new_password_path(resource_name) %></p>
               <%#= f.submit 'Sign in', class: 'btn'%>
              <!-- <p class="text-right forgot-text"><a href="#">Forgot Password?</a></p> -->
              <button type="submit" name="commit" class="btn">Sign In <i class="fa fa-long-arrow-right" aria-hidden="true"></i></button>
              <p class="text-center">Or</p>
              <ul>
                <li><a href="<%= user_github_omniauth_authorize_path %>">Sign In with Github </a></li>
                <li><a href="<%= user_linkedin_omniauth_authorize_path %>">Sign In with Linkedin</a></li>
              </ul>
            <% end %>
          </div><!-- login-form-->
        </div><!-- login-left-section-->

        <div class="login-right-section">
          <ul>
            <li><a href="http://www.facebook.com/sharer.php?u=http://stairs.uistaging.site/<%= new_user_session_path %>"><i class="fa fa-facebook" aria-hidden="true"></i></a></li>
            <!-- <li><a href="#"><i class="fa fa-camera" aria-hidden="true"></i></a></li> -->
            <li><a href="http://twitter.com/intent/tweet?url=http://stairs.uistaging.site/<%= new_user_session_path %>"><i class="fa fa-twitter" aria-hidden="true"></i></a></li>
            <li><a href="https://plus.google.com/share?url=http://stairs.uistaging.site/<%= new_user_session_path %>"><i class="fa fa-google-plus" aria-hidden="true"></i></a></li>
          </ul>
        </div><!-- login-right-section-->
      </div>
    </div><!-- login-screen-->
  </div><!-- container-->
</div><!-- main-->
