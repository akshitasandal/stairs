<h1>Listing Companies</h1><br>
<table class="table my_table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Owner</th>
      <th>Location</th>
      <!-- <th><center>Albums</center></th> -->
      <!-- <th><center>Testimonials</center></th> -->
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @companies.each do |admin_company| %>
    <tr>
      <td><%= admin_company.name %></td>
      <td><%= admin_company.owner_name %></td>
      <td><%= admin_company.city.name %></td>
      <td><%= link_to 'Show', company_path(admin_company), :target => "_blank" , class: "btn btn-primary btn-xs"%>
        <%= link_to 'Edit', edit_admin_company_path(admin_company), class: "btn btn-primary btn-xs" %>
        <%= link_to 'Destroy', admin_company_path(admin_company), data: { confirm: 'Are you sure?' }, method: :delete , class: "btn btn-primary btn-xs"%>
        <%if !is_admin? %>
        <%= link_to 'View all posts', admin_company_blog_posts_path(admin_company), class: "btn btn-primary btn-xs" %></td>
        <%end%>
        <%if is_admin?%>
        <%= link_to 'Invite User', new_user_invitation_path, :class => "btn btn-primary btn-xs" %></td>
        <%end%>
      </tr>
      <% end %>
    </tbody>
  </table>
  <div class="text-center">
    <%#= will_paginate @companies , :container => false  %>
  </div>

  <p>
    <%= link_to 'Add New Company', new_admin_company_path , :class => "btn btn-primary"  %>
  </p>
